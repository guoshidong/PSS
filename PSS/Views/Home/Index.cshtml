    <script>
    function wopen(title, url) {
        //先检查是否已经打开了此url
        for (var i = 0; i < 100; i++) {
            //如果第i个选项卡不存在，说明已经循环完了，则break，退出循环
            if (!$("#tabs").tabs("exists", i)) break;
            //判断第i个选项卡有没有href缓存项，以及href缓存项是否与传入的url相同
            if ($("#tabs").tabs("getTab", i).data("href") == url)
                return; //如果相同，证明已被打开，则无需再打开
        }

        //增加一个选项卡
        var tabs = $('#tabs').tabs('add', {
            "title": title,
            "selected": true,
            "href": url,
            "closable": true
        });

        //得到当前选中的选项卡(当前选中的选项卡就是刚刚新增的那个选项卡)
        var item = $('#tabs').tabs("getSelected");
        //将url保存到 href 缓存项中
        item.data("href", url);
    }
    </script>

